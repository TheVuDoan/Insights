<% liked = current_user && post.likes.find { |like| like.user_id == current_user.id } %>
<% if liked %>
  <div role="button" class="post-button card-like" data-toggle="tooltip" data-placement="bottom" data-post_id=<%= post.id %> title="Bỏ thích bài viết">
    <i class="fas fa-fw fa-heart post-like-true"></i>
  </div>
<% else %>
  <div role="button" class="post-button card-like" data-toggle="tooltip" data-placement="bottom" data-post_id=<%= post.id %> title="Thích bài viết">
    <i class="far fa-fw fa-heart post-like-false"></i>
  </div> 
<% end %>