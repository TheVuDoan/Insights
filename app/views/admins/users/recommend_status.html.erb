<h1 class="h3 mb-2 text-gray-800">Tất cả người dùng</h1>
<p class="mb-4">Xem danh sách tất cả người dùng.</p>

<div class="card mb-4">
  <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
    <h6 class="m-0">Tìm kiếm</h6>
  </a>
  <div class="collapse" id="collapseCardExample">
    <div class="card-body">
      <%= search_form_for @q, url: admins_users_path, method: :get, enforce_utf8: false do |f| %>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="email_cont">email</label>
            <%= f.text_field "email_cont", class: "form-control", placeholder: 'Nhập email' %>
          </div>
        </div>
        <%= button_tag(type: "submit", class: "btn btn-primary", name: nil) do %>
          Tìm kiếm
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Lượt xem tin gợi ý</th>
        <th>Tổng lượt xem</th>
        <th>Tỉ lệ xem tin gợi ý</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.recommend_view_count %></td>
          <td><%= user.view_count %></td>
          <td><%= user.view_count != 0 ? user.recommend_view_count*100/user.view_count : 0 %>%</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @users %>