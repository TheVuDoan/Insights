<div class="row">
  <div class="col-xl-12 px-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-4 header">
      <h5 class="mb-2 text-gray-800 font-weight-bold">Bài viết hàng đầu</h4>
    </div>
  </div>
</div>

<%= render "posts_list", posts: @posts %>

<% if user_signed_in? %>
  <div class="row">
    <div class="col-xl-12 px-4">
      <div class="d-sm-flex align-items-center justify-content-between mb-4 header">
        <h5 class="mb-2 text-gray-800 font-weight-bold">Tin khác từ <%= @most_visited_source.name %></h4>
      </div>
    </div>
  </div>

  <%= render "posts_list", posts: @most_visited_source_posts %>
<% end %>