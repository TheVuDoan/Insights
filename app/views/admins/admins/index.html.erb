<h1 class="h3 mb-2 text-gray-800">Tất cả quản trị viên</h1>
<p class="mb-4">Xem danh sách tất cả quản trị viên.</p>

<div class="card mb-4">
  <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
    <h6 class="m-0">Tìm kiếm</h6>
  </a>
  <div class="collapse" id="collapseCardExample">
    <div class="card-body">
      <%= search_form_for @q, url: admins_admins_path, method: :get, enforce_utf8: false do |f| %>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="email_cont">email</label>
            <%= f.text_field "email_cont", class: "form-control", placeholder: 'Nhập email' %>
          </div>
        </div>
        <%= button_tag(type: "submit", class: "btn btn-primary", name: nil) do %>
          Tìm kiếm
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<a href="/admins/sign_up">
  <button type="button" class="btn btn-primary small mb-3">Thêm quản trị viên</button>
</a>

<div class="table-responsive">
  <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Họ tên</th>
        <th>Vai trò</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td><%= admin.id %></td>
          <td><%= admin.email %></td>
          <td><%= admin.fullname %></td>
          <td><%= admin.role.name %></td>
          <td width="120px">
            <%= link_to 'Chi tiết', admins_admin_path(admin), class: "btn btn-primary btn-sm mb-2 small" %>
            <%= link_to 'Xóa', admins_admin_path(admin), method: :delete, class: "btn btn-danger btn-sm mb-2 small" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @admins %>