<div class="container">
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-12">
              <div class="p-5">
                <%= devise_error_messages! %>
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Thay đổi mật khẩu</h1>
                </div>
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "user" }) do |f| %>
                  <%= f.hidden_field :reset_password_token %>
                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-user", placeholder: "Mật khẩu mới" %>
                    <% if @minimum_password_length %>
                      <small class="form-text text-muted">(Tối thiểu <%= @minimum_password_length %> kí tự)</small>
                    <% end %>                
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-user", placeholder: "Nhập lại mật khẩu mới" %>
                  </div>
                  <%= f.submit "Thay đổi mật khẩu", class: 'btn btn-primary btn-user btn-block' %>
                  <hr>
                <% end %>
                <div class="text-center">
                  <a class="small" href="/users/sign_up/">Đăng kí tài khoản!</a>
                </div>
                <div class="text-center">
                  <a class="small" href="/users/sign_in/">Đã có tài khoản? Đăng nhập ngay!</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
